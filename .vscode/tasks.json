{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compilar Java para bin",
			"type": "shell",
			"command": "javac",
			"args": [
				"-d",
				"bin",
				"src\\**\\*.java"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Compilar Java para bin",
			"type": "shell",
			"command": "powershell",
				"args": [
					"$files = Get-ChildItem -Path src -Recurse -Filter *.java | ForEach-Object { $_.FullName }; javac -d bin $files"
				],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		}
	]
}